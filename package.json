{
  "name": "recipe-calculator",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-public && npm run bundle && npm run copy-data",
    "copy-public": "cp -r src/public dist/public",
    "bundle": "esbuild dist/api/browser-entry.js --bundle --format=esm --outfile=dist/public/engine.js",
    "copy-data": "cp -r data dist/public/data",
    "serve": "npx serve dist/public",
    "clean": "rimraf dist",
    "test": "vitest run"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
